doctype html
html
 head
  title Rohito's CRUD App
  link(rel="stylesheet" , href="/bower_components/bootstrap/dist/css/bootstrap.css")
  link(rel="stylesheet" , href="/css/style.css")  
 body
   nav.navbar.navbar-expand-md.navbar-dark.bg-dark.static-top
    .container
      a.navbar-brand(href='https://www.instagram.com/rrrohito', target='_blank') Rohito
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href='/')
              | Home 
              span.sr-only (current)
      if user    
          
          li.nav-item
            a.nav-link(href='/articles/add') Add Article
          ul.nav.navbar-nav
      if user 
            li.list-unstyled
              a(href='/users/logout') Logout 
      else   
     
            li.list-unstyled
              a(href='/users/register') Register
            li.list-unstyled
              a(href='/users/login') Login  
   .container
    != messages('message', locals)
    if errors
      each error, i in errors
        div(class='alert alert-danger')  #{error.msg}
    block content
     
    br
    hr
    footer
      p Rohito.com &reg; 2018
   script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')  
   script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
   script(src="/js/main.js")
        
